generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Products {
  id              String   @id @default(cuid())
  itemCategory    String
  itemImg         String
  itemName        String
  itemDescription String?
  itemPrice       Int
  updateAt        DateTime @updatedAt
  createAt        DateTime @default(now())
}

model Address {
  id          String   @id @default(cuid())
  userAddress String
  userFlat    String
  userFloor   String
  createAt    DateTime @default(now())
}

model Feedback {
  id           String   @id @default(cuid())
  userName     String
  userFeedback String
  createAt     DateTime @default(now())
}

model Promocode {
  id        String   @id @default(cuid())
  promocode String
  createAt  DateTime @default(now())
}
